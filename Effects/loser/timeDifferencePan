desc:Time Difference Pan
//tags: processing stereo
//author: LOSER

slider1:0<-100,100,1>Pan (%)

in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

@init
b=0;
@slider
tmp=bs;
pan = abs(slider1/100);
bs=floor( min(pan/500*srate , 1000000) );
tmp < bs ? freembuf(bs);
@sample
b[0]= slider1 > 0 ? spl0:spl1;
(b+=1) >= (bs) ? b=0;

slider1 > 0 ? (
    spl0 = b[0];
):(
    spl1 = b[0];
);

